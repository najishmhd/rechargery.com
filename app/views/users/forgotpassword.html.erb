<div id="wrapper1">
	<section id="promotext" class="container">
			<header class="title">
				<h2>Forgot Password</h2>
				<span class="byline">Enter your Email ID Below</span> 
			</header>
	</section>
	<div id="editprofilecontainer" class="container clearfix">

		<%= form_tag (url_for({:controller => 'users',:action => 'resetpassword'})) do %>


			<% if flash[:alert] %>
				<div id="flash">
					<span id="alert"><%= flash[:alert] %></span>
				</div>
			<% end %>
			<% if flash[:notice] %>
				<div id="flash">
					<span id="notice"><%= flash[:notice] %></span>
				</div>
			<% end %>

			<% if @user && @user.errors.any? %>
				<div id="errors">
					<% for message in @user.errors.full_messages %>
						<%= message %> <br>
					<% end %>
				</div>
			<% end %>

			<%= label_tag("Email") %>
			<%= text_field_tag("email", nil, :class => "text", :placeholder => "Email ID") %>
			<%= submit_tag("Reset Password",:class => "submitbutton") %>
		<% end %>

	
	</div>
</div>
